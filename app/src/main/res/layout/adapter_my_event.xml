<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEventImage"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="match_parent"
            android:background="@drawable/ssss"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEmpName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="#485D86"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:text="--"
                    android:textColor="@color/textSecondry"
                    android:textSize="@dimen/_6sdp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:text="--"
                android:gravity="center"
                android:textColor="@color/textSecondry"
                android:textSize="@dimen/_8sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/_5sdp"
                android:text="A-152, A Block, Sector 63, Noida"
                android:gravity="center"
                android:textColor="@color/textSecondry"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:visibility="gone"
                android:background="@color/textSecondry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_areGoing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/civFirstGoing"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_profile" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/civSecondGoing"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_profile" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCount"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="5"
                        android:textColor="@color/textSecondry"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>

                <!-- <androidx.appcompat.widget.AppCompatImageView
                     android:id="@+id/ivThreeDots"
                     android:layout_width="@dimen/_18sdp"
                     android:layout_height="@dimen/_16sdp"
                     android:rotation="90"
                     android:src="@drawable/ic_3_dots"
                     android:visibility="invisible" />-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>

